<header  id="title">
  <div  id="titleImage" class="jumbotron jumbotron-fluid text-center  bg-success text-light" >
    <div class="container">
      <h1 class="display-4">Let's Go Golfing!</h1>
      <p class="lead">An app to keep track of your golf scores.</p>
    </div>
  </div>
  <nav class="navbar navbar-expand-lg navbar-dark " id="navbar">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Home</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
      aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
    </button>
    <div class="collapse navbar-collapse m-3" id="navbarNavDropdown">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link m-3" href="#averages">Averages</a>
        </li>
        <li class="nav-item m-3">
          <a class="nav-link"  href="#topThree">Top Three Games</a>

    </div>
    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#score-modal">Add a New
      Game</button>

    {{#if user}}
    <button  type="button" class="btn btn-info" id="logout">Log Out</button>
    {{else}}
    </div>
      <a
        class="btn "
        href="/google"
        role="button"
        style="text-transform:none; 
        background-color:skyblue
      >
        <img
          width="20px"
          style="margin-bottom:3px; margin-right:5px"
          alt="Google sign-in"
          src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png"
        />
        Sign in with Google
      </a>
    </div>
    {{/if}}
  </nav>
</header>